-- Load Rayfield
getgenv().SecureMode = true
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/UI-Interface/CustomFIeld/main/RayField.lua'))()

-- Wait for character
local Player = game.Players.LocalPlayer
Player.CharacterAdded:Wait()
local Humanoid = Player.Character:WaitForChild("Humanoid")

-- Window
local Window = Rayfield:CreateWindow({
    Name = "Animation Hub",
    LoadingTitle = "Animation Hub Loading...",
    LoadingSubtitle = "Powered by Rayfield",
    ShowText = "Animations",
    Theme = "Default",
    ToggleUIKeybind = "RightControl",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil,
        FileName = "AnimHubConfig"
    }
})

-- Tab
local AnimationsTab = Window:CreateTab("Animations", "rewind")
local AnimSection = AnimationsTab:CreateSection("Available Animations")

-- Animation loader
local Animation = Instance.new("Animation")
local Track

local function PlayAnimation(id, speed)
    if not Humanoid then return end
    if Track then Track:Stop() end
    Animation.AnimationId = "rbxassetid://" .. id
    Track = Humanoid:LoadAnimation(Animation)
    Track:Play()
    Track.Looped = true
    Track:AdjustSpeed(speed or 1)
end

-- Function to add a single animation button
local function AddEmote(id, name)
    AnimSection:AddButton({
        Name = name,
        Callback = function()
            PlayAnimation(id, 1)
        end
    })
end

-- New emotes at top
AddEmote(114140630538674, "AI Cat Dance")
AddEmote(89490157555374, "Sayori")
AddEmote(85361710130557, "Caramelldansen")
AddEmote(76612430083861, "MM2")
