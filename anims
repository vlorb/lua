AddEmote(114687548971893, "Creepr Mode")
AddEmote(106389948045296, "Floating On Clouds")

-- Emergency Stop
AnimSection:AddButton({
    Name = "Emergency Stop",
    Callback = function()
        if Track then
            Track:Stop()
        end
    end
})
