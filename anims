AddEmote(80199369124716, "Rampage 2.0")

-- Rest of emotes
AddEmote(78195344190486, "Dog Mode")
AddEmote(115417853064013, "Helicopter Mode")
AddEmote(85588129788692, "Hit the Griddy")
AddEmote(83265734904502, "Take the L")
AddEmote(129764254213842, "Gangnam Style")
AddEmote(114400428765989, "180Â° flip")
AddEmote(110146282544198, "Orange Justice")
AddEmote(10714340543, "The Floss")
